@using ASP_NET_MVC_Shop_Example.Models

@{
    ViewBag.Title = "Удалить товар";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@model Product

<div class="form-container">
    <h3 class="dark bold">Вы уверены, что хотите удалить товар @Model.Name?</h3>

    <form asp-action="Delete" asp-route-id="@Model.Id">
        <input class="form-button-delete" type="submit" value="Удалить" />
    </form>

    <p>
        <a class="form-button-back" asp-action="Index">Назад к списку</a>
    </p>
</div>